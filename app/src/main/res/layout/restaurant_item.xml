<?xml version="1.0" encoding="utf-8"?>
<!-- restaurant_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@color/whiteyellow"
    android:orientation="horizontal">

    <!-- Left part for reviews -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvReviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reviews"
            android:background="@color/skyblue"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"/>
    </LinearLayout>

    <!-- Middle part -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Restaurant name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant_icon"
                android:layout_gravity="center_vertical"
                android:contentDescription="restaurant_icon"/>

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location_icon"
                android:layout_gravity="center"
                android:contentDescription="location_icon"
                android:scaleType="fitCenter"/>


            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Phone number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon"
                android:layout_gravity="center"
                android:contentDescription="phone_icon"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/description_icon"
                android:layout_gravity="center"
                android:contentDescription="descriptionicon"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Right part for WhatsApp and Message -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/whatsapp"
            android:id="@+id/ivWhatsApp"
            android:layout_gravity="center_vertical"
            android:contentDescription="WhatsApp_icon"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:id="@+id/ivMessage"
            android:contentDescription="Message icon"/>
    </LinearLayout>

</LinearLayout>
